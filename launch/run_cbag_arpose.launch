<launch>
  <param name="use_sim_time" value="true"/>

  <include file="$(find cassandra_ros)/launch/cassandraBag.launch" />
 
  <node pkg="tf" type="static_transform_publisher" name="world_to_cam" 
    args="0 0 0.5 -1.57 0 -1.57 world camera 1" />
 
  <node pkg="cassandra_ros" type="cassandraBag-cli.py" name="cassandraBag_cli1" args="play start /camera/image_raw/compressed"/>
  <node pkg="cassandra_ros" type="cassandraBag-cli.py" name="cassandraBag_cli2" args="play start /camera/camera_info"/>
  <node pkg="cassandra_ros" type="cassandraBag-cli.py" name="cassandraBag_cli3" args="play start /camera/image_rect"/>
  <node pkg="cassandra_ros" type="cassandraBag-cli.py" name="cassandraBag_cli4" args="play start /camera/image_raw"/>
 
  <node pkg="image_view" type="image_view" name="image_view" args="image:=/camera/image_raw _image_transport:=compressed">
    <param name="autosize" type="boolean" value="true"/>
  </node>

  <node pkg="cassandra_ros" type="cassandraBagClock.py" name="cassandraBagClock"/>

  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find ar_pose)/demo/demo_single.rviz"/>

  <node name="ar_pose" pkg="ar_pose" type="ar_single" respawn="false" output="screen">
    <param name="marker_pattern" type="string" value="/tmp/4x4_2.patt"/>
    <param name="marker_width" type="double" value="152.4"/>
    <param name="marker_center_x" type="double" value="0.0"/>
    <param name="marker_center_y" type="double" value="0.0"/>
    <param name="threshold" type="int" value="100"/>
    <param name="use_history" type="bool" value="true"/>
  </node>

</launch>
